rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクションのルール
    match /users/{userId} {
      // 認証されたユーザーは自分のドキュメントのみ読み書き可能
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 匿名ユーザーも自分のドキュメントにアクセス可能（uidが一致する場合）
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // ユーザーのサブコレクション（items, shops）のルール
      match /items/{itemId} {
        // 認証されたユーザーは自分のアイテムのみ読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /shops/{shopId} {
        // 認証されたユーザーは自分のショップのみ読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // ユーザーのサブスクリプション情報のルール
      match /subscription/{subscriptionId} {
        // 認証されたユーザーは自分のサブスクリプション情報のみ読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // ユーザーの寄付データのルール
      match /donations/{donationId} {
        // 認証されたユーザーは自分の寄付データを読み取り可能
        // 書き込みはクライアントから禁止（サーバー/Cloud Functions のみ想定）
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
    }
    
    // ファミリー共有機能のルール
    match /families/{familyId} {
      // ファミリーメンバーは自分のファミリー情報を読み書き可能
      allow read, write: if request.auth != null && 
        resource.data.members[request.auth.uid] != null;
      
      // ファミリー作成時は、作成者がオーナーとして追加される
      allow create: if request.auth != null && 
        request.resource.data.members[request.auth.uid].role == 'owner';
      
      // 認証されたユーザーはファミリー情報を読み取り可能（招待参加用）
      allow read: if request.auth != null;
      
      // 認証されたユーザーはファミリー情報に書き込み可能（招待参加用）
      allow update: if request.auth != null;
    }
    
    // ファミリー招待トークンのルール
    match /familyInviteTokens/{tokenId} {
      // 認証されたユーザーは招待トークンを読み取り可能（検証用）
      allow read: if request.auth != null;
      
      // ファミリーオーナーは招待トークンを作成可能
      allow create: if request.auth != null && 
        request.resource.data.createdBy == request.auth.uid;
      
      // ファミリーオーナーまたは招待されたユーザーはトークンを更新可能（使用済みマーク等）
      allow update: if request.auth != null && 
        (request.resource.data.createdBy == request.auth.uid || 
         request.resource.data.usedBy == request.auth.uid);
    }
    
    // 共有コンテンツのルール
    match /sharedContents/{contentId} {
      // 認証されたユーザーは共有コンテンツを読み取り可能
      allow read: if request.auth != null;
      
      // ファミリーメンバーは共有コンテンツを作成可能
      allow create: if request.auth != null;
      
      // 共有者またはファミリーメンバーは共有コンテンツを更新可能
      allow update: if request.auth != null;
      
      // 共有者は共有コンテンツを削除可能
      allow delete: if request.auth != null && 
        resource.data.sharedBy == request.auth.uid;
    }
    
    // 匿名ユーザー用のコレクション（スキップ機能用）
    match /anonymous/{sessionId} {
      // 匿名セッションのデータは誰でも読み書き可能（一時的なデータ）
      allow read, write: if true;
      
      match /items/{itemId} {
        allow read, write: if true;
      }
      
      match /shops/{shopId} {
        allow read, write: if true;
      }
    }
    
    // その他のコレクションはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 